function mif()
{
  # laaaaaaazy way to retrieve media items for activity on CMS
  rake clone:production:media_item:for_activity ids="$@"
}

# bundle local config
function -(){
  path_to_gem="$1"
  base_path="`eval echo ~`"
  case "$1" in
  "mae") gem_to_bundle="maestro_activity_engine"
         path_to_gem="$base_path"/vhl/mae
         ;;
  "client") gem_to_bundle="maestro_client"
            path_to_gem="$base_path"/vhl/maestro_client
            ;;
  *) gem_to_bundle="$1"
    path_to_gem="$base_path"/vhl/"$1"
    ;;
  esac

  # http://serverfault.com/questions/417252/check-if-directory-exists-using-home-character-in-bash-fails
  if [ -d "`eval echo ${path_to_gem//>}`" ]; then
    bundle config local.$gem_to_bundle $path_to_gem
    bundle config local.$gem_to_bundle
  else
    echo "I cannot bundle $path_to_gem"
  fi
}

# remove bundle local config for a gem
function --(){
  path_to_gem=$1
  case "$1" in
  "mae") gem_to_bundle="maestro_activity_engine"
         ;;
  "client") gem_to_bundle="maestro_client"
            path_to_gem="maestro_client"
            ;;
  *) gem_to_bundle=$1
     ;;
  esac

  bundle config --delete local."$gem_to_bundle"
  bundle config
}

# go to new cloud servers
# $1: qa server ip.
function qac(){
  ssh deploy@$1  
}

# edit activity xml
function x(){
  vim $(rails runner "puts Activity.find($1).content_filepath")
}

