source ~/.bashrc
source ~/.vhl_profile
source ~/.nginx_profile

# my stuff
if [ -f ~/.git-completion.bash ]; then
  . ~/.git-completion.bash
fi

# User specific aliases and functions
alias gitpull='git pull; git submodule update'
alias dlog='tail -f log/development.log'
# load tmux with 256 colors support (for vim)
alias tmux='tmux -2'
# simple http server
alias server='python -m SimpleHTTPServer'
alias mega='gitpull;bundle install;rake db:migrate'

export PATH="/usr/local/sbin:$PATH"

export PATH="$PATH:$HOME/.rvm/bin" # Add RVM to PATH for scripting

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*

# promp is getting override somewhere... let's source it here
source ~/.prompt
